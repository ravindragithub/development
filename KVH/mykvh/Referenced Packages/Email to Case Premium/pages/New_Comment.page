function escapeQuery(q) {
    var special = ['\\','?','&','|','!','{','}','[',']','(',')','^','~','*',':','"','\'','+','-'];
    for (var i = 0;i < special.length;i++)
        q = q.replace(new RegExp('\\'+special[i],'g'),'\\'+special[i]);
    return q;
}


