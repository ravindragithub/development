    function updateTextCounter() {
        if ({!ENABLE_HTML_SUPPORT}) {
            try {
                tinyMCE.activeEditor.save();
            } catch (e) {};
            
            var textBody = getCurrentCommentBody();
            E2CP.GlobalUtil.stripHTMLRemote(textBody,function(result) {
                textBody = result;
                var valueLength = countUtf8Bytes(textBody.replace(/\n/g, '\r\n'));
                
                updateTextCounterDisplay(valueLength);
                checkForAttachment(textBody);
            });
        } else {
            var textBody = getCurrentCommentBody(),
                valueLength = countUtf8Bytes(textBody.replace(/\n/g, '\r\n'));
            
            updateTextCounterDisplay(valueLength);
            checkForAttachment(textBody);
        }
    }
    
    function updateTextCounterDisplay(currentLength) {
        currentLength = currentLength || 0;
        var counter = document.getElementById("Comment_TextArea_counter"),
            remaining = maxLength - currentLength - (typeof commentHeaderLength !== undefined ? commentHeaderLength : 0);
        
        if (remaining < 0) {
            counter.parentNode.className = "textCounterMiddle over";
            updateText(counter,(-1 * remaining) + " over limit",false);
        } else if (remaining < 50) {
            counter.parentNode.className = "textCounterMiddle warn";
            updateText(counter,remaining + " remaining",false);
        } else {
            counter.parentNode.className = "textCounterMiddle";
        }
    }
    
    function checkForAttachment(textBody) {
        if ({!!ENABLE_ATTACHMENT_REMINDER}) return;
        
        if (!textBody) {
            showHideWarning("attachment",false);
            return;
        }
        var commentBody = textBody.toLowerCase();
        var attachmentTexts = "{!JSENCODE(ATTACHMENT_REMINDER_PHRASES)}".split("|");
        
        var phraseFound = false;
        for (var i = 0;i < attachmentTexts.length;i++) {
            if (commentBody.indexOf(attachmentTexts[i]) >= 0) {
                phraseFound = true;
                break;
            }
        }
        
        var displayWarning = phraseFound;
        if (phraseFound) {
            for (var i=0;;i++){
                var box = document.getElementById("pg:addCommentF:addCommentPB:rptOrder:{!AttachmentsIndex}:attachmentsPBS:attachmentsPBSI:attachments_Checkbox:"+i);
                if (box) {
                    if (box.checked) {
                        displayWarning = false;
                        break;
                    }
                } else break;
            }
        }
        showHideWarning("attachment",displayWarning);
    }
    
