    function insertAtCursor(sText) {
    //inserts text at cursor - different for IE and moz
        
        //html decoding
        sText = sText.replace(new RegExp('&qu'+'ot;', 'g'), '"');
        sText = sText.replace(new RegExp('&ap'+'os;', 'g'), '\'');
        sText = sText.replace(new RegExp('&am'+'p;', 'g'), '&');
        sText = sText.replace(new RegExp('&l'+'t;', 'g'), '<');
        sText = sText.replace(new RegExp('&g'+'t;', 'g'), '>');
        
        if ({!ENABLE_HTML_SUPPORT}) {
            var focusElem = document.activeElement;
            tinyMCE.activeEditor.execCommand("mceInsertContent",false,sText);
            focusElem.focus();
        } else {
            myField = document.getElementById("pg:addCommentF:addCommentPB:rptOrder:{!CommentIndex}:addCommentPBS:addCommentPBSI:Comment_TextArea");
            
            //IE
            if (document.selection) {
                myField.focus();
                sel = document.selection.createRange();
                sel.text = sText;
            }
            //firefox
            else if (myField.selectionStart || myField.selectionStart == '0') {
                var startPos = myField.selectionStart;
                var endPos = myField.selectionEnd;
                myField.value = myField.value.substring(0, startPos) + sText + myField.value.substring(endPos, myField.value.length);
            }
            else {
                myField.value += sText;
            }
        }
    }
    
    function insertCanned(obj) {
        insertAtCursor(obj);
    }
    
    function getCurrentCommentBody() {
        if ({!ENABLE_HTML_SUPPORT}) {
            try {
                return tinyMCE.activeEditor.getContent();
            } catch (e) {
                return "";
            }
        } else
            return document.getElementById("pg:addCommentF:addCommentPB:rptOrder:{!CommentIndex}:addCommentPBS:addCommentPBSI:Comment_TextArea").value;
    }
    
    var prevBody = "{!JSENCODE(commentBody)}",
        currBody;
    function saveDraft() {
        if(!{!DRAFT_COMMENTS})
            return;
        
        currBody = getCurrentCommentBody();
        if (currBody == prevBody) return;
        
        sforce.connection.sessionId = ApiSess;
        //sforce.connection.query() throws an exception when the session has expired
        try {
            sforce.connection.query("SELECT Id,E2CP__Comment_Body__c FROM E2CP__Case_Comment_Draft__c WHERE E2CP__Case__c = '{!Case.Id}' AND E2CP__User__c = '{!$User.Id}' LIMIT 1",{onSuccess: handleQuerySuccess,onFailure: handleQueryFailure});
        } catch(e) {
            if('faultcode' in e && e.faultcode == 'sf:INVALID_SESSION_ID')
                clearInterval(window.saveDraftInterval);
        }
    }
    
    function handleQuerySuccess(result) {
        var records = result.getArray("records"),
            draft;
        
        if (records.length == 1)
            draft = records[0];
        else
            draft = getNewDraft();
        upsertDraft(draft);
    }
    
    function handleQueryFailure(result) {
        upsertDraft(getNewDraft());
    }
    
    function getNewDraft() {
        var draft = new sforce.SObject("E2CP__Case_Comment_Draft__c");
        draft.E2CP__Case__c = "{!Case.Id}";
        draft.E2CP__User__c = "{!$User.Id}";
        return draft;
    }
    
    function upsertDraft(draft) {
        try {
            if (currBody) {
                draft.E2CP__Comment_Body__c = currBody;
                sforce.connection.upsert("Id",[draft],{onSuccess: handleDMLSuccess,onFailure: function(result){}});
            } else if (draft.Id) {
                deleteDraft();
            }
        } catch(e) {
            if('faultcode' in e && e.faultcode == 'sf:INVALID_SESSION_ID')
                clearInterval(window.saveDraftInterval);
        }
    }
    
    function handleDMLSuccess(result) {
        prevBody = currBody;
        
        var info = document.getElementById("draftSaveInfo");
        info.style.display = "inline-block";
        info.innerText = "Draft last saved at "+new Date().toLocaleTimeString([], {month: 'numeric', day: 'numeric', year: '2-digit', hour: '2-digit', minute:'2-digit'});
        info.className = "";
        window.setTimeout(function() { info.className = "saved";},1);
    }
    
    function preventEnter(e) {
        var code = e.keyCode || e.which;
        if (code == 13 && e.target.tagName != 'TEXTAREA') {
            e.preventDefault();
            return false;
        }
    }
    
