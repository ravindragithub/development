          <div class="ptBreadcrumb">&nbsp;Â«&nbsp;
              <a href="/{!HTMLENCODE(groupObj.Id)}">Back to : {!HTMLENCODE(groupObj.Name)}</a>
          </div>
      </div>
      <script>
          function confirmCancel() {
              if (confirm("{!JSENCODE($Label.CancellingthiswoulddiscardthechangesPleaseconfirm)}")) 
              {
                  return true;
              }
              return false;
          }
          function addProduct(id,name){
              addProduct(id,name);
              var searchstring = document.getElementById("searchstring");
              searchstring.value = ""
          }
          function noenter(ev)
          {
