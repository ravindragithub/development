@charset "UTF-8";
/* CSS Document */

body {
    margin:0;
    padding:0;
    font-size:80%;
}

*{	box-sizing:border-box;
	-moz-box-sizing:border-box;
}

.partner_portal {
    margin:0 auto;
    font-family: sans-serif;
    max-width:1000px;
    background-color:#fff;
    overflow:auto;
    padding:25px;
}

img {
	border:none;	
}

h1, h2, h3, h4, p, li {
    line-height:normal;
    padding-bottom:5px;
}

p, li, a {
    color:#444;
    line-height:125%;
}

h1, h2, h4 {
    font-weight:lighter;
}

h1 {
    font-size:1.7em;
    -webkit-margin-before: 0;
    -webkit-margin-after: 0;
    margin:15px 0;
}

h2 {
    font-size:1.5em;
    font-weight:lighter;
    color:#666;
    -webkit-margin-before: 0;
    -webkit-margin-after: 0;
}

h3 {
    font-size:1.3em;
    font-weight:lighter;
    -webkit-margin-before: 0;
    -webkit-margin-after: 0;
}

h4 {
    font-size:1em;
    font-weight:bold;
    -webkit-margin-before: 0;
    -webkit-margin-after: 0;
}

p {
    font-size:95%;
}

hr {
    border: 0;
    height: 0;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #fff;
    margin:20px 0;
}

a {
    color:#1f83ad;
}

ul {
    list-style-position: outside;
    margin-bottom:20px;
}

li {
    padding:0px 0px 5px 0px;
    margin:0;
    font-size:95%;
}

.white-bg {
    background-color: #ffffff;
}

.font-85 {
    font-size:85%;
}

.no-border {
    border-bottom:none;
}

.button {
    padding:10px 15px;
    border:1px solid #ddd;
    text-transform: uppercase;
    text-decoration: none;
    font-weight:bold;
    display:inline-block;
    color:#444;
    border-radius:0px;
    font-size:85%;
    cursor:pointer;
}

.button:hover {
    background:#f3f3f3;
    border:1px solid #f3f3f3;
}

.button-red {
    background:#cc0000;
    color:#fff;
    border: transparent;
}

.button-red:hover {
    background:#980303;
    border: transparent;
}

.button-blue {
    background:#1f83ad;
    color:#fff;
    border: transparent;
}

.button-blue:hover {
    background:#167298;
    border: transparent;
}

.small-button {
    padding:5px 5px 3px 5px;
}

.pad-left {
    margin-left:20px;
}

.pad-right {
    margin-right:20px;
}

.pad-top {
    margin-top:20px;
}

.pad-bottom {
    margin-bottom:20px;
}

.pad-inside {
    padding:25px;
}

.right {
    float:right;
}

.left {
    float:left;
}

.center {
    text-align:center;
}

.width-75 {
    width:75%;
}

.width-70 {
    width:70%;
}

.width-50 {
    width:50%;
}

.width-25 {
    width:25%;
}

.width-20 {
    width:20%;
}

.inline {
    display:inline;
}

textarea, input[type="text"], input[type="button"], input[type="tel"], input[type="password"], input[type="email"], input[type="search"] {
	width: 100%;
	color: #444;
	border: 1px solid #ccc;
	background-color: #fff;
	/*padding: 8px;*/
	border-radius: 0px;
    font-size:1em;
    font-family: sans-serif;
}

input[type="button"]  {
	width:auto;
	margin:10px 0;
    padding:5px 15px;
}

input[type=radio] {
    float: left;
    margin:0;
}

label {
  display: -moz-inline-stack;
  zoom: 1;
  _overflow: hidden;
  margin: 0 0 0 25px;
    font-size:95%;
    color: #444;
    display: block;
}

.label-nomargin {
    margin-left:0;
    margin-bottom:3px;
}


.partner_portal table {
    width:100%;
}

.partner_portal table td {
    padding:3px;
}

.partner_portal .header-row {
    padding:5px;
    background:#f3f3f3;
    text-align:left;
}

.partner_portal .header-row a {
    font-size:85%;
    text-decoration:none;
}

#pagination table {
    width:100%;
    margin: 0 auto;
}

#pagination td {
    width:320px;
    text-align:center;
    color: #1f83ad;
    font-weight:bold;
    font-size:85%;
    vertical-align:middle;
    padding:10px;
}

.button-bar {
    border-top: 1px solid #ddd;
    width:100%;
    margin:60px 0;
    padding:15px 0;
}


/* boxes on support home */
table.support-home {
    border-spacing: 20px;
    border-collapse: separate;
}

table.support-home td {
    border:1px solid #ddd;
    padding:15px 20px;
    text-align:center;
    width:20%;
}

table.support-home td:hover {
    background:#f3f3f3;
}

table.support-home td a {
    text-decoration:none;
    line-height:18px;
}

table.support-home h4 {
    line-height:1.4em;
}

table.case-list td {
    padding:5px;
    border-bottom:1px solid #dddddd;
}

/* how the cases look */
.case-info table td {
    border-bottom:1px solid #dddddd;
    width:25%;
    color:#444;
}

.case-info table th {
    padding:10px;
    font-weight:normal;
}

.case-info h3 {
    padding:5px;
    background-color:#eeeeee;
}

.case-info .labelCol {
    border-bottom:1px solid #ddd;
}

.case-info .labelCol:after {
    content:':';
}

.case-info .dataCol {
    text-align:left;
    font-weight:bold;
}

/* list of comments at bottom of case */

.case-comments tr.headerRow,
.case-comments th.headerRow {
    text-align:left;
    background:#f3f3f3;
    font-size:90%;
    padding:5px 10px;
    color:#1f83ad;
    font-weight:bold;
    border-top:0;
}

.case-comments td {
    border-bottom:1px solid #ddd;
    text-align:left; 
    padding:10px;
    vertical-align:top;
    color:#444;
}

/* support sidebar */
ul.support-sidenav {
    padding: 40px 0 0 0 ;
    list-style: none;
    font-weight:normal;
}

ul.support-sidenav li {
    padding:10px 20px;
}

ul.support-sidenav li.active {
    font-weight:bold;
    background:#e8f2f7;
}

ul.support-sidenav li:hover {
    background:#e6e6e6;
}

.support-sidenav a {
    text-decoration: none;
}