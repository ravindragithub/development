@charset "UTF-8";
/* CSS Document */

.rich-tabhdr-side-border {
    background-image:none;
}

.rich-tabhdr-side-cell {
    border:none;
}

.rich-tab-header {
    font-size: 1.2em;
    padding: 10px 20px;
    font-family: inherit;
    font-weight:bold;
}

.rich-tabhdr-cell-active table,
.rich-tabhdr-cell-inactive table {
    margin-right:10px;
}

.rich-tab-active {
    background-color: #ffffff;
    background-image:none;
    color: #4B4B4B;
    border-top:1px solid #ccc;
    border-left:1px solid #ccc;
    border-right:1px solid #ccc;
}


.rich-tab-inactive {
    background-image:none;
    background-color: #7FA1C3;
    border-width: 0;
    color:#ffffff;
    text-shadow: 1px 1px #5C7694;
    border-radius: 3px 3px 0 0;
}

.rich-tab-bottom-line {
    border:none;
}

.rich-tabpanel-content {
    background-color:#fff;
    padding:20px;
    border:none;
    font-family:inherit;
    font-size:1em;
    -webkit-box-shadow: 1px 1px 2px 0px rgba(204, 204, 204, 1);
    -moz-box-shadow: 1px 1px 2px 0px rgba(204, 204, 204, 1);
    box-shadow: 1px 1px 2px 0px rgba(204, 204, 204, 1);
}