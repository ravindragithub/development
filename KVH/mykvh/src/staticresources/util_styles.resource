#util-main {
    background: #fff;
    width:70%;
    border:1px solid #ccc;
    border-radius: 3px;
    margin:40px auto 15px auto;
    padding:30px;
    overflow:auto;
}

#util-main .caution {
    color:#fff;
    background:#ff5900 url(../images/icon_caution.png) no-repeat 15px center;
    border-radius: 3px;
    box-shadow: 1px 1px 1px #ccc;
    padding:10px 10px 10px  55px;
    margin-bottom:30px;
}

#util-main a.button-space {
    margin-right:20px; 
}

#util textarea, select[multiple], input[type="text"], input[type="button"], input[type="tel"], input[type="password"], input[type="email"], input[type="search"], select {
    width:65%;
    display:block;
}

#util p {
    margin-bottom:10px;
}

#util-footer {
    width:70%;
    margin:auto;
    padding:0;
    color:#7c7c7c;
}

#util-footer p {
    font-size:95%;
}

/* media queries ------------------------------ */

@media (max-width: 600px) {
    
    #util-main {
        width:90%;
    }
    
    #util textarea, select[multiple], input[type="text"], input[type="button"], input[type="tel"], input[type="password"], input[type="email"], input[type="search"], select {
    width:100%;
    }
    
    #util-main .two-col {
        width:100%;
        float:none;
    }
    
    #util-footer p {
        float: none;
        text-align: center;
    }
    
}