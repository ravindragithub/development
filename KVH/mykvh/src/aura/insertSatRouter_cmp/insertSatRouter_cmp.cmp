<aura:component controller="HTS_ltgsvc_satrouters">
    <aura:attribute name="serialNumber" type="string" description="SatRouter serial number" />
    <aura:attribute name="provisioningKey" type="string" description="This is a child Provisioning Key" />
    <aura:attribute name="revision" type="string" description="This is the hardware revision of the SatRouter" />
    
    <aura:registerEvent name="cmpDataUpdated" type="c:HTS_SatRouter_Bubbling_evt" />
    <aura:registerEvent name="appDataUpdated" type="c:HTS_SatRouter_Application_evt" />

    <div style="width: 100%; height: 7px; background: #F87431; overflow: hidden;" />
    <form class="slds-form--horizontal">

        <p class="slds-m-around--small">
            <div class="slds-form-element slds-is-required">
                <label class="slds-form-element__label" for="serialNumber">iDirect Modem Serial Number</label>
                <div class="slds-form-element__control">
                    <ui:inputText aura:id="serialNumber" class="slds-input" value="{!v.serialNumber}" required="true" disabled="true"/>
                </div>
            </div>
        </p>

        <p class="slds-m-around--small">
            <div class="slds-form-element slds-is-required">
                <label class="slds-form-element__label" for="provKey">Provisioning Key</label>
                <div class="slds-form-element__control">
                    <ui:inputText aura:id="provKey" class="slds-input" value="{!v.provisioningKey}" required="true" />
                </div>
            </div>
        </p>

        <p class="slds-m-around--small">
            <div class="slds-form-element slds-is-required">
                <label class="slds-form-element__label" for="rev">Revision</label>
                <div class="slds-form-element__control">
                    <ui:inputText aura:id="rev" class="slds-input" value="{!v.revision}" required="true" />
                </div>
            </div>
        </p>

        <p class="slds-m-around--small">
            <div class="slds-form-element">
                <lightning:button variant="brand" label="Create Satellite Router" iconName="utility:add" iconPosition="left" onclick="{!c.handleInsert}" />
            </div>
        </p>
    </form>

</aura:component>