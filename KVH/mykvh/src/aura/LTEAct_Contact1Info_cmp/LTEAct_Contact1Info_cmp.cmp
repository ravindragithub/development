<aura:component >
    <aura:attribute name="simpleLTEActivation" type="Object"/>
    
    <aura:attribute name="cont1Required" type="boolean"/>
    <aura:attribute name="showAddContact" type="boolean" default="false"/>
    <aura:attribute name="countryList" type="List"/>
    <aura:attribute name="stateMap" type="Map"/>
    <aura:attribute name="selectedCountry" type="string"/>
    <aura:attribute name="selectedState" type="string"/>
    <aura:handler name="change" value="{!v.selectedCountry}" action="{!c.handleCountryValue}"/>
    <aura:handler name="change" value="{!v.selectedState}" action="{!c.handleStateValue}"/>
    <lightning:card title="Additional Account Contact(s) - optional">
        <!--
        <aura:set attribute="actions">
            <aura:if isTrue="{!v.cont1Required}">
                <lightning:icon iconName="action:remove" title="Error in section.Please validate the fields" size="xx-small"/>
                <aura:set attribute="else">
                    <lightning:icon iconName="action:approval" alternativeText="Success" size="xx-small"/>
                </aura:set>
            </aura:if>            
        </aura:set>
-->
        <div class="slds-p-horizontal--small"> 
            
            <div class="slds-grid slds-wrap">
                <div class="slds-col slds-size_1-of-1 slds-large-size_4-of-12 authRep">
                    <lightning:input label="Authorized Representative" type="checkbox" checked="{!v.simpleLTEActivation.Contact1_is_Authorized_Rep__c}"/>
                    <span onclick="{!c.openPicker}">
                        <lightning:icon iconName="utility:info_alt" title="Authorized Representatives Permissions" size="xx-small"/>
                    </span>
                </div>
                <div class="slds-col slds-size_1-of-1 slds-large-size_4-of-12">
                    <lightning:input label="Billing Point of Contact" type="checkbox" checked="{!v.simpleLTEActivation.Contact1_is_Billing_Point__c}"/>
                </div>
                <div class="slds-col slds-size_1-of-1 slds-large-size_4-of-12">
                    <lightning:input label="Invoice Recipient" type="checkbox" checked="{!v.simpleLTEActivation.Contact1_is_Invoice_Recipient__c}"/>
                </div>
            </div>
            
            
            <div class="slds-grid slds-wrap">
                <div class="slds-col slds-size_1-of-1 slds-large-size_6-of-12 leftPanel">
                    <lightning:input aura:id="LTEFieldContFirstName" label="Main Contact First/Given Name"
                                  value="{!v.simpleLTEActivation.Main_Contact_First_Name_Cont1__c}" 
                                  onblur="{!c.contact1Validation}"/>
                    <lightning:input aura:id="LTEFieldContLastName" label="Main Contact Last/Family Name/Surname"
                                  value="{!v.simpleLTEActivation.Main_Contact_Last_Name_Cont1__c}" 
                                  onblur="{!c.contact1Validation}"/>
                    <lightning:input aura:id="LTEField" label="Company Name(if applicable)"
                                  value="{!v.simpleLTEActivation.Contact_1_Company_Name__c}"/>
                    <lightning:input type="email" aura:id="LTEField" label="Email" 
                                  value="{!v.simpleLTEActivation.Contact_1_Email__c}"
                                  onblur="{!c.contact1Validation}"/>     
                </div>
                <div class="slds-col slds-size_1-of-1 slds-large-size_6-of-12 rightPanel">
                    <lightning:input type="phone" aura:id="LTEField" label="Phone Number" 
                                  value="{!v.simpleLTEActivation.Contact_1_Phone__c}"
                                  onblur="{!c.contact1Validation}"/>
                    <c:Country_Picklist_cmp countryList="{!v.countryList}" stateMap="{!v.stateMap}" 
                                            selectedCountry="{!v.selectedCountry}" selectedState="{!v.selectedState}" 
                                            isRequired="false" componentID="contactCountryState"/>                     
                </div>
            </div>
            <br/>        
            <div class="">
                <lightning:button label="Add Another Contact" variant="brand" onclick="{!c.handleAddContact}" class="savebtn"/>
            </div>
        </div>
        
        <div aura:id="helptext1" class="toggle modal">
            <div class="modal-content">
                <div class="modalContent">
                    <span class="close" onclick="{!c.openPicker}">&times;</span>
                    <h1>Authorized Representatives Permissions</h1>
                    <p style="word-break: break-word;">Authorized Representatives listed on this form have full right, power, and authority to act on the Subscriber's behalf with respect to the account, 
                        including permission to receive, view, and access all account and usage-related information, and
                        make changes to the account but not appoint additional Authorized Representatives. For details visit www.kvh.com/accountpermissions. </p>
                </div>
            </div>
        </div>
    </lightning:card>
    <c:LTEAct_Contact2Info_cmp simpleLTEActivation="{!v.simpleLTEActivation}" showAddContact="{!v.showAddContact}" 
                               countryList="{!v.countryList}" stateMap="{!v.stateMap}"/>
</aura:component>