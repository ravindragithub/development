<aura:component >
    <aura:attribute name="caseRecord" type="Case"/>  
    <aura:attribute name="saveValid" type="boolean"/>
    <aura:attribute name="productTypes" type="List" />
    
    <div>
        <h1>Technical Support</h1>
        <p style="font-weight: bold;">We're sorry you are having a problem with your KVH product or service. With the information you provide to create a case below, our Technical Support department will work quickly to troubleshoot and fix your problem.</p>    
        <h3>Case Details:</h3>
        <lightning:select aura:id="ServiceType" name="ServiceType" 
                          label="Product or Service Type:" onchange="{! c.onChangeServiceType }"
                          required="true">
            <option value="">-- None --</option>
            <aura:iteration items="{!v.productTypes}" var="color">
                <option value="{!color.label}">{!color.label}</option>
            </aura:iteration>
        </lightning:select>
        <lightning:input aura:id="techCase" label="Vessel or Installation Platform:"
                         value="{!v.caseRecord.New_Vessel_or_Platform__c}"
                         required="true" maxlength="80"/>   
        <lightning:input aura:id="techCase" label="Service Account Number (if applicable):"
                         value="{!v.caseRecord.Account_Number__c}" maxlength="20"/>   
        <lightning:input aura:id="techCase" label="Case Subject:"
                         value="{!v.caseRecord.Subject}"
                         required="true" maxlength="255"/>   
        <lightning:textarea aura:id="techCase" label="Case Description:"
                            value="{!v.caseRecord.Description}" style="border-radius: 0;"
                            required="true"/>    
        <br/> 
        <i>To upload an attachment, please first click 'Submit' to create your case. </i>
        <br/>                                                                       
        <br/>                                                                       
        <div style="border-top: 1px solid #dfdede;">
            <button onclick="{! c.submitCase }"
                    class="button button-blue right" >Submit</button>
        </div> 
    </div>
</aura:component>