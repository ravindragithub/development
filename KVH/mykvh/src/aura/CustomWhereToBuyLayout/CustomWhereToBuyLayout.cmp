<aura:component implements="forceCommunity:layout" access="global"
                description="CustomWhereToBuyLayout">

    <aura:attribute name="header" type="Aura.Component[]" required="false" access="global"/>
    <aura:attribute name="content" type="Aura.Component[]" required="false" access="global"/>

    <div class="slds">
        <div class="slds-grid slds-wrap slds-grid--pull-padded customKVH">
            <div class="slds-col--padded">{!v.header}</div>
        </div>
        <div class="container">
            <div class="contentPanel">
                <div class="slds-grid slds-wrap slds-grid--pull-padded slds-p-left--small slds-p-right--small">
                    {!v.content}
                </div>
            </div>
        </div>

    </div>

</aura:component>