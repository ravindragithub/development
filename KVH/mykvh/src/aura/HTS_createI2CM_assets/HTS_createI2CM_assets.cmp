<aura:component controller="HTS_ltgsvc_terminals">
    <aura:attribute name="systemSerialNumber" type="String" description="I2CM System Serial Number" />
    <aura:attribute name="adminIP" type="String" description="I2CM Admin IP" />
    <aura:attribute name="swSerialNumber" type="String" description="CommBox Software System Serial Number" />
    <aura:attribute name="MTAMAC" type="String" description="19-0504 Innomedia MTA MAC Address" />
    <aura:attribute name="satRouter" type="String" description="19-0955 iDirect PCB Serial Number" />

    <!-- event publishers -->
    <aura:registerEvent name="cmpDataUpdated" type="c:HTS_terminals_bubbling_evt" />
    <aura:registerEvent name="appDataUpdated" type="c:HTS_terminals_application_evt" />
    <!-- event listeners -->
    <aura:handler event="c:HTS_terminals_application_evt" action="{!c.handleAppEvent}" />
    
    <div style="width: 100%; height: 7px; background: #F87431; overflow: hidden;" />
    I AM CREATE I2CM ASSETS COMPONENT
    <form class="slds-form--horizontal">

        <p class="slds-m-around--small">
            <div class="slds-form-element slds-is-required">
                <label class="slds-form-element__label" for="systemSerialNumber">02-2204 System Serial Number</label>
                <div class="slds-form-element__control">
                    <ui:inputText aura:id="systemSerialNumber" class="slds-input" value="{!v.systemSerialNumber}" required="true" />
                </div>
            </div>
        </p>

        <p class="slds-m-around--small slds-is-required">
            <div class="slds-form-element">
                <label class="slds-form-element__label" for="satRouter">19-0955 iDirect PCB Serial Number</label>
                <div class="slds-form-element__control">
                    <ui:inputText aura:id="satRouter" class="slds-input" value="{!v.satRouter}" required="true" blur="{!c.stripLeadingZero}"/>
                </div>
            </div>
        </p>

        <p class="slds-m-around--small">
            <div class="slds-form-element slds-is-required">
                <label class="slds-form-element__label" for="adminIP">Admin IP</label>
                <div class="slds-form-element__control">
                    <ui:inputText aura:id="adminIP" class="slds-input" value="{!v.adminIP}" required="true" />
                </div>
            </div>
        </p>

        <p class="slds-m-around--small">
            <div class="slds-form-element slds-is-required">
                <label class="slds-form-element__label" for="swSerialNumber">CBX LICENSE CommBox License Number</label>
                <div class="slds-form-element__control">
                    <ui:inputText aura:id="swSerialNumber" class="slds-input" value="{!v.swSerialNumber}" required="true" />
                </div>
            </div>
        </p>
                
        <p class="slds-m-around--small">
            <div class="slds-form-element slds-is-required">
                <label class="slds-form-element__label" for="MTAMAC">19-0504 Innomedia MTA MAC Address</label>
                <div class="slds-form-element__control">
                    <ui:inputText aura:id="MTAMAC" class="slds-input" value="{!v.MTAMAC}" required="true" />
                </div>
            </div>
        </p>

        <p class="slds-m-around--small">
            <div class="slds-form-element">
                <lightning:button variant="brand" label="Create i2CM System Assets" iconName="utility:add" iconPosition="left" onclick="{!c.handleInsert}"/>
            </div>
        </p>

    </form>

</aura:component>