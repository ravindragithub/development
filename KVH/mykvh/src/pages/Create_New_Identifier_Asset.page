<apex:page standardController="case" extensions="Create_New_Identifier_Asset">
  <script>
        function CheckCase()
        {
            if({!assetvalidation}){
                window.open("/apex/Add_Identifier_Product?caseid="+'{!CaseID}');    
            }else{
                alert('There is no System Asset listed on the Case');
            }
        }
  </script>
  <apex:form >
       <apex:commandLink value="Add Identifier Asset(opens in a new window)" onclick="CheckCase()"/>
  </apex:form>
</apex:page>