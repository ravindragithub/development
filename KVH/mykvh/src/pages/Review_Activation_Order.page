        <body class="ui-mobile-viewport ui-overlay-a" style="zoom: 1;">
            <div data-role="page" style="overflow: hidden;"  tabindex="0" class="ui-page ui-page-theme-a ui-page-active">
                
                <!-- ** Form tag Start ** -->
                <apex:form id="theForm">
                    <div class="loadingStatus" id="loadingDiv">
                        <div class="">
                            <div class="img "><img src="/img/loading.gif"/></div>
                        </div>
                    </div>
                    <div id="loadingBox" class="loadingBox"></div>
                    <!-- ** Top header Start **-->
                    <!-- <div id="top"> <!-- this will be turned into a component -->
                    <c:Activation_Header />
                    <!-- ** Top header End **-->
                    <!-- ** Sidebar Start **-->
                    <div id="sidebar">
                        <c:Activation_Status state="{!ActivationStatus}" pageOrderID="{!ActivationOrderId}"/> 
                    </div>
                    <!-- ** Sidebar End **-->
                    <apex:actionFunction name="btnSelectednavigateNext" action="{!goToTab}" oncomplete="hideLoadingDiv();" reRender="wrapper">
                        <apex:param name="param1" assignTo="{!selectedTab}" value="" />
                    </apex:actionFunction>
                    
                    <div id="main">
                        <apex:outputPanel layout="block" id="wrapper" styleClass="wrapper">
                            <h1>Review Service Details</h1>
                            <div class="panel clear" >
                                <!-- **Final Review Tab Start  ** -->
                                <c:Activation_Product_Summary /> 
                                <!-- **Final Review Tab End  ** -->
                            </div>
                        </apex:outputPanel>
                    </div>
                </apex:form>
                
                <!-- ** remodal popup Start ** -->
                <div data-role="popup" id="confirm1" data-overlay-theme="b" class="ui-popup ui-body-inherit ui-overlay-shadow ui-corner-all">
                    <a href="#" data-rel="back" class="ui-btn ui-corner-all ui-shadow ui-btn-a ui-icon-delete ui-btn-icon-notext ui-btn-right">Close</a>
                    <div data-role="header" role="banner" class="ui-header ui-bar-inherit" style="padding-bottom: 10px;">
                        <h1 class="ui-title" role="heading" aria-level="1">Confirm Activation Order</h1>
                    </div>
                    <div role="main" class="ui-content">
                        <p> By selecting "Confirm and Submit", your activation order Account and Service Details will be submitted to KVH Airtime Services for approval. </p>
                        <p> If you would like to change any activation details once submitted, please contact KVH Airtime Services at <a href="mailto:satelliteservices@kvh.com" class="ui-link">satelliteservices@kvh.com</a></p>
                        <div class="center">
                            <a href="#" class="button ui-link" onclick="showLoadingDiv();finalconfirmwindow();" data-rel="none">Confirm and Submit</a> <a href="#" style="margin-left:10px;" data-rel="back" class="ui-link">   Return to Review</a>
