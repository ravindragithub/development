<apex:page showHeader="true" sidebar="false">
  <apex:includeScript value="/lightning/lightning.out.js" />
  <script>
    var recordId="{!$CurrentPage.parameters.contract_id}";
    $Lightning.use("c:HTS_contract_controls_container", function() {
      $Lightning.createComponent(
        "c:HTS_hybrid_manager_cmp",
        {"identifier": recordId},
        "lightning",
        function(cmp) {
          console.log("Component created!");
          console.log(recordId);
          console.log(cmp);
        });
      });
  </script>
  <div id="lightning"></div>
</apex:page>