        <!-- script to show error message area -End -->
            function validateError(param){
                var Isvalid;
                var currentcomp = $("[id$="+param+"]");
                $(currentcomp).find('.kvh-show-errormsg-here').empty();
                if($(currentcomp).find("[id$=country]").length ==1){
                    if(Isvalid == undefined)
                        Isvalid = $(currentcomp).find("[id$=country]").valid();
                    else
                        Isvalid = $(currentcomp).find("[id$=country]").valid() && Isvalid;
                }
                if($(currentcomp).find("[id$=state]").length ==1){
                    if(Isvalid == undefined)
                        Isvalid = $(currentcomp).find("[id$=state]").valid();
                    else
                        Isvalid = $(currentcomp).find("[id$=state]").valid() && Isvalid;
                }else{
                    var html = "";
                    var errordiv = currenttabtoshowerror();
                    $(currentcomp).find('.kvh-show-errormsg-here').append(errordiv);
                    }
                    if($(currentcomp).find('[id$=country]').hasClass("error") && ($(currentcomp).find("[id$=country]").valid() == false)){
                        html += "<li>Select Country</li>";
                    }
                    if($(currentcomp).find('[id$=State_Province__c]').hasClass("error") && ($(currentcomp).find("[id$=State_Province__c]").valid() == false)){
                        html += "<li>Select State</li>";
                    }
                    $(currentcomp).find('.error-box').find('.bullets').html(html);
                    $(currentcomp).find('.error-box').show();
                }
            
    </script>
    
       <!--  Below javascript controls the height and width of anything with style class   -->
