            setTimeout(function() {
                $j('select.company_functional_group').each(function(i, val) { 
                    $j(val).width(130);
                    $j(val).height(70);
                
                })
            },100);
        });
    </script>
    
    
    <!-- The script below will replace the default "--None--" salesforce puts on default picklists-->
    
    <apex:includeScript value="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"/>
    <script>
    $j = jQuery.noConflict();
    
    $j(function(){
        replacePickVals();
    });
    
    function replacePickVals(){
                 $j('option').filter(function () { return $j(this).html() == "Choose One"; }).html('-- Select --');
         $j('option').filter(function () { return $j(this).html() == "Choose Country First"; }).html('-- Select Country First --');
        $j('option').filter(function () { return $j(this).html() == "--None--"; }).html('-- Select --');
    }
    </script>
    
    
    
    
