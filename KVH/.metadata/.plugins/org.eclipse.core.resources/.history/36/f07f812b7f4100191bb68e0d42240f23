<apex:component controller="Act_Voice_Line_Component_Ctrl" allowDML="true" id="voice_line2_Comp_Id">
    
    <apex:attribute name="VoiceLine2ActivationService" description="This is the Activation Order Service record for the the Activation Order Master record"
                    type="Activation_Service__c" required="required" assignTo="{!objActivationService}"/>
    
    <style>
        .radio-margin {
        margin-bottom: 20px !important;
        }
        .width-60 {
        width: 60% !important;
        }
    </style>
    <script>
    j$(function (){
        
        j$("input[type=radio][name=voiceline2]").each(function(){
            if(j$(this).val() == '{!objActivationService.Voice_Line_2_Type__c}'){
                j$(this).prop('checked','checked');
            }
            if('{!objActivationService.Voice_Line_2_Type__c}' == '' || '{!objActivationService.Voice_Line_2_Type__c}' == 'KVH-assigned Phone Number'){
                j$("#userSpecificDependentLine2").find("input[type='text']").attr('disabled','disabled');
                
            }
            if('{!objActivationService.Voice_Line_2_Type__c}' == ''){
                j$("#secondVoiceLineBlock").find("input[type='radio']").attr('disabled','disabled');
            }
        });
        
        j$("input[type=radio][name=voiceline2]").change(function(){
            j$('.kvh-show-errormsg-here').empty(); 
            j$("#userSpecificDependentLine2").hide();
            j$("#userSpecificDependentLine2").find("input[type='text'] , input[type='radio']").attr('disabled','disabled');
            if(j$(this).attr("id") == 'user-spec' && j$(this).prop('checked')){
                j$("#userSpecificDependentLine2").find("input[type='text'] , input[type='radio']").removeAttr('disabled');
                j$("#userSpecificDependentLine2").toggle('slow');
            }else{
                j$("[Id$=Voice2_User_Country__c]").val("");
                j$("[Id$=Voice2_User_Specified_Code__c]").val("");
            }
        });
    });
    
    
    function showhidesecondblock(boolparam){
        if(boolparam == 'true'){
            j$("#secondVoiceLineBlock").show();
            j$("#secondVoiceLineBlock").find("input[type='text'] , input[type='radio']").removeAttr('disabled');
            j$("#userSpecificDependentLine2").find("input[type='text'] , input[type='radio']").attr('disabled','disabled');
        }else{
            j$("#secondVoiceLineBlock").hide();
            j$("input[type=radio][name=voiceline2]").each(function(){
                j$(this).removeAttr('checked');
            }); 
            j$('.kvh-show-errormsg-here').empty(); 
            j$("#secondVoiceLineBlock").hide();
            j$("#userSpecificDependentLine2").hide();
            j$("#secondVoiceLineBlock").find("input[type='text'], input[type='radio']").attr('disabled','disabled');
            j$("[Id$=Voice2_User_Country__c]").val("");
            j$("[Id$=Voice2_User_Specified_Code__c]").val("");
            
            j$("[Id$=Voice2_Country1__country]").val("");
            j$("[Id$=Voice2_Code1__c]").val("");
            j$("[Id$=Voice2_Country2__country]").val("");
            j$("[Id$=Voice2_Code2__c]").val("");
            j$("[Id$=Voice2_Country3__country]").val("");
            j$("[Id$=Voice2_Code3__c]").val("");
            j$("[Id$=Voice2_Country4__country]").val("");
            j$("[Id$=Voice2_Code4__c]").val("");
            j$("[Id$=Voice2_Country4__country]").val("");
            j$("[Id$=Voice2_Code5__c]").val("");
            
            cancelVoiceLine2();
        }
    }
    
    j$( document ).ready(function() {
        if('{!boolSecondVoiceLine}' == 'true'){
            j$("#secondVoiceLineBlock").show();
        }else{
            j$("#secondVoiceLineBlock").hide();
        }
    });
    
    
     function voice2ClearValidate(){
        var setcontent = 'Are you sure want to clear the form?';
        removeduplicatepopup('[data-remodal-id=clearconfirmvoice2]');
        var instmodel = j$('[data-remodal-id=clearconfirmvoice2]').remodal(options);
        j$("#kvh-remodelcontentmessageclearconfirmvoice2").html(setcontent);
        instmodel.open();
        j$('[data-remodal-id=clearconfirmvoice2]').find('.remodal-close').hide();
        j$('[data-remodal-id=clearconfirmvoice2]').css('width', '20%').css('padding', '20px 20px').find('div:first').css('width', '100%');
        
    }
    
    </script>
     <apex:actionFunction name="cancelVoiceLine2" action="{!saveActivationServiceVoice}"  reRender="voice2MainIdButton">
