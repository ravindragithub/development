        var $j = jQuery.noConflict();
        $j(document).ready(function() {
            setTimeout(function() {
                $j('select.company_functional_group').each(function(i, val) { 
                    $j(val).width(130);
                    $j(val).height(70);
                
                })
            },100);
        });
    </script>
    
