<apex:page standardController="case" extensions="Add_or_Update_Airtime_ContactRoles">
    <script>
        function CheckCase()
        {
            if(!{!CreateAccountinSalesforce} || !{!AssociateAssetPaltform} || {!searchPlatformAssetAccount})
            {
                alert("Please confirm that the appropriate platform is in the :\n 1) Create Account in Salesforce must be checked and \n 2) Associate the Asset to platform in Salesforce must be checked and \n 3) Search Platform / Asset Account must NOT be Null.\n Or you can initiate the Find_and_Add_Account_to_Asset."); 
            }else
            {
                window.open("/apex/CreateContactandContactRole?caseid="+'{!CaseID}');    
            }
        }
    </script>
    <apex:form >
       <apex:commandLink value="Add or Update Airtime Contacts and Roles(opens in new tab)" onclick="CheckCase()"/>
    </apex:form>
</apex:page>